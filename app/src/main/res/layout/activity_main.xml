<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/tic5">



<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center">
    <Button
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:text="Play/Pause\nmusic"
        android:id="@+id/btplay"

        />
</LinearLayout>
    <RadioGroup
        android:layout_marginTop="55dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/rGroup"

        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Human VS Human"
            android:id="@+id/rbHuman"
            android:textStyle="bold"
            android:textColor="#FDD835"
            android:buttonTint="#FDD835"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bot VS Human"

            android:id="@+id/rbBot"
            android:textStyle="bold"
            android:textColor="#9AE34F"
            android:buttonTint="#9AE34F"
            />
    </RadioGroup>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X PLAYER :"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#9AE34F"

        />
    <EditText
android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ENTER NAME"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        android:text=""
        android:id="@+id/etX"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O PLAYER :"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#9AE34F"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFFFF"
            android:hint="ENTER NAME"
            android:textStyle="bold"
            android:id="@+id/etO"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="140dp"
        android:text="START GAME"
        android:id="@+id/btStart"
        />
    <Button
        android:layout_gravity="center"
        android:text="ABOUT"
        android:id="@+id/btAbout"
        android:layout_width="80dp"
        android:layout_height="60dp"
        />

</LinearLayout>

